{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./interfaces/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/interfaces/*": [
        "./interfaces/*",
      ],
      "@/components/*": [
        "./components/*",
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/features/*": [
        "./features/*"
      ],
    },
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "vite.config.ts"
  ]
}